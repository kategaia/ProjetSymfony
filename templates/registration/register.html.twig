{% extends 'base.html.twig' %}

{% block title %}Register - Zelda Theme{% endblock %}

{% block body %}

<!-- Header -->
<header style="background-color: #3B6E58; color: white; padding: 50px 0; text-shadow: 2px 2px 4px #000;">
    <div class="container text-center">
        <h1 class="fw-bolder" style="font-family: 'Cinzel', serif;">Rejoignez-nous en vous inscrivant</h1>
        <p class="lead">Embarquer dans une aventure épique avnt vous inscrivant dès maintenant</p>
    </div>
</header>

<!-- Registration Form Section -->
<section style="background-color: #F2EBD3; padding: 50px 0;">
    <div class="container px-4">
        <div class="row gx-4 justify-content-center">
            <div class="col-lg-6">
                <div class="p-4" style="background-color: white; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25); border: 2px solid #AF874E;">
                    <h2 class="text-center mb-4" style="font-family: 'Cinzel', serif; color: #1D3C34;">S'inscrire</h2>
                    {{ form_errors(registrationForm) }}
                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #AF874E;'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #AF874E;'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #AF874E;'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #AF874E;'}, 'label': 'Password'}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.createdAt, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #AF874E;'}}) }}
                        <div class="mb-3">
                            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        </div>
                        <button type="submit" class="btn text-white w-100" style="background-color: #1D3C34; border-radius: 5px;">S'inscrire</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer style="background-color: #1D3C34; color: white; padding: 20px 0;">
    <div class="container px-4">
        <p class="m-0 text-center" style="font-family: 'Cinzel', serif;">Courage. Sagesse. Pouvoir. &copy; Tael's Bar 2024</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
