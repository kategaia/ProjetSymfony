{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg p-4" style="max-width: 600px; margin: auto; border-radius: 10px; background-color: #f8f9fa;">
        <div class="card-header text-center bg-primary text-white" style="border-radius: 10px 10px 0 0;">
            <h3 class="mb-0">Modifier la catégorie</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <!-- Champ pour le nom de la catégorie -->
                <div class="mb-3">
                    <label for="category_name" class="form-label">Nom de la catégorie</label>
                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez le nouveau nom de la catégorie' } }) }}
                </div>

                <!-- Champ pour la description de la catégorie -->
                <div class="mb-3">
                    <label for="category_description" class="form-label">Description de la catégorie</label>
                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez une description pour la catégorie' } }) }}
                </div>

                <!-- Bouton pour enregistrer -->
                <div class="text-center">
                    <button type="submit" class="btn btn-success w-100">Enregistrer les modifications</button>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="card-footer text-center">
            <a href="{{ path('app_category_list') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}


